				<code profiles="">set ClassModDefinition RequiredPlayerClass PlayerClassIdentifierDefinition'GD_PlayerClassId.Siren'</code>
			</category>
			<category name="Salvador">
				<code profiles="">set ClassModDefinition RequiredPlayerClass PlayerClassIdentifierDefinition'GD_PlayerClassId.Mercenary'</code>
			</category>
			<category name="Gaige">
				<code profiles="">set ClassModDefinition RequiredPlayerClass PlayerClassIdentifierDefinition'GD_TulipPackageDef.PlayerClassId.Mechromancer'</code>
			</category>
			<category name="Krieg">
				<code profiles="">set ClassModDefinition RequiredPlayerClass PlayerClassIdentifierDefinition'GD_LilacPackageDef.PlayerClassId.Psycho'</code>
